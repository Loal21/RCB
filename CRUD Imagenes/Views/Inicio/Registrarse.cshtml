@model CRUD_Imagenes.Models.Usuario;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .center-image {
            display: block;
            margin: 0 auto;
        }
    </style>
</head>
<body>


    <div class="container mt-3 pt-3">
        <img src="https://plataforma.ucundinamarca.edu.co/aplicaciones/CamposdeAprendizaje/assets/img/logo-udec.svg" alt="Logo Udec" width="300" height="200" class="center-image">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">

                <div class="card">
                    <div class="card-header">
                       Registrate
                    </div>
                    <div class="card-body">

                        <form asp-controller="Inicio" asp-action="Registrarse" method="post">

                            <input class="form-control mb-3" type="text" placeholder="Nombre" asp-for="Nombre" required />
                            <input class="form-control mb-3" type="text" placeholder="Apellido" asp-for="Apellido" required />
                            <input class="form-control mb-3" type="text" placeholder="Telefono " asp-for="Telefono" required />
                            <input class="form-control mb-3" type="text" placeholder="Documento" required asp-for="Documento" />
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" required asp-for="Contraseña" />
                            <div class="d-grid gap-2 mb-3">
                                <button style="background-color: green; color: white;" class="btn btn-primary" type="submit">Registrate</button>
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {

                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                            ¿Ya tienes una cuenta? <a href="@Url.Action("IniciarSesion","Inicio")"> Iniciar Sesion</a>

                        </form>

                    </div>

                </div>

            </div>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
